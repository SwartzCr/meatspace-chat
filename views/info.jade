extend default_layout

block content
  .infobox
    .item
      h1= t('welcome')

      ul
        li
          a(href='http://the-nsa.org', class='do medium')= t('poweredByDO') 

    .item
      h2= t('forContributors')
      ul
        li
          p= t('contributorCopy')
          p
            a(href='http://github.com/swartzcr/meatspace-chat')= t('githubRepo')

    .item
      h2= t('forHackers')
      ul
        li
          p= t('hackerCopy')
          p
            a(href='http://github.com/swartzcr/meatspace-chat')= t('addItHere')

    .item
      h2= t('forAPIDevs')
      ul
        li
          p= t('devsCopy')
          p
            a(href='https://github.com/swartzcr/meatspace-chat')= t('moreInfoHere')
    .item
      h2= t('forConsumers')
      ul
        li
          a(href='https://www.debian.org/misc/merchandise', class='big')= t('meatspaceShop')

    .item
      h2= t('forCredits')
      ul
        li
          a(href='https://twitter.com/swartzcr', class='big') Adaptorbro
        li
          a(href='https://github.com/swartzcr/meatspace-chat/graphs/contributors', class='medium') Contributorbros
